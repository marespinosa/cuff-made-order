<section class="customize-section">
  
  <!-- MOBILE IMAGE -->
  <div class="timelessmobile">
    {% if section.settings.mobile_image != blank %}
      <img src="{{ section.settings.mobile_image | image_url }}" alt="Mobile Image">
    {% endif %}
  </div>

  <!-- LEFT CONTENT -->
  <div class="custom-left">
    <h5 class="padding-bottom-24">{{ section.settings.subheading }}</h5>

    <h1 class="customize-h1">{{ section.settings.heading }}</h1>

    <div class="custom-content-padding">
      <p>{{ section.settings.description }}</p>

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="custom-btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>

  <!-- RIGHT IMAGE -->
  <div class="custom-right desktop-display-none">
    {% if section.settings.desktop_image != blank %}
      <img src="{{ section.settings.desktop_image | image_url }}" alt="Desktop Image">
    {% endif %}
  </div>

</section>

{% schema %}
{
  "name": "Customize Personal",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Customise"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Add your personal touch"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Create your dream engagement ring with our flexible configuration tools. Tailor its materials, cut & details to suit your personal preferences."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Customize"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Customize Personal"
    }
  ]
}
{% endschema %}
